<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_weight="1"
    android:background="@color/white"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="5dp"
    android:textAlignment="center"
    tools:ignore="WebViewLayout" tools:targetApi="jelly_bean_mr1">

    <TextView
        android:id="@+id/txt_Host_Total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="right"
        android:text="Host Total"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_Match_Price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="right"
        android:text="@string/mmatchPrice"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_Host_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="right"
        android:text="Host Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bujoin"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_weight="0"
        android:background="@drawable/buttonblue"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/go"

        android:elevation="0dp"
        android:text="@string/joinmatch"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:targetApi="lollipop" />

</LinearLayout>